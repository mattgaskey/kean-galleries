{% if view_mode == 'teaser' %}
{% include "@storybook/teaser/simple.twig" with {
  link: {
    url: content.field_url|children,
    title: name|children
  },
  picture: content.field_media,
  intro: content.field_building
} %}
{% elseif view_mode == 'link' and content.field_url|children is not empty %}
  <span class="inline-block sm:pl-3 sm:before:content-empty sm:before:content-pipe sm:before:text-gray sm:before:pr-3 prose prose-lg text-lg font-medium"><a href="{{ content.field_url|children }}">{{ name|children }}</a></span>
{% elseif view_mode == 'link' and content.field_url|children is empty %}
  <span class="inline-block sm:pl-3 sm:before:content-empty sm:before:content-pipe sm:before:text-gray sm:before:pr-3 prose prose-lg text-lg font-medium">{{ name|children }}</span>
{% else %}
  {{ elements }}
{% endif %}

{% set block_link = variant == 'block' %}
{% set small = variant == 'small' %}
{% set yellow = variant == 'yellow' %}
<a href="{{ link.url }}" class="button-link
  {{ block_link ? 'block text-center' : 'inline-block' }} {{ small ? 'text-sm px-5 py-2' : 'text-base px-7 py-5' }}
  {{ yellow ? 'bg-yellow text-black border-2 border-yellow hover:bg-transparent hover:text-yellow' : 'bg-black text-white border-2 border-black hover:bg-transparent hover:text-black' }}
">{{ link.title }}</a>
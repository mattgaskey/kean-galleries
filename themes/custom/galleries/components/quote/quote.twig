{% set quote %}
  <div class="text-lg sm:text-2xl before:content-open-quote after:content-close-quote">{{ quotation }}</div>
{% endset %}

{% set source %}
  {% if attribution %}
    <div>
      <span class="text-sm sm:text-base text-gray prose">- {{ attribution }}</span>
    </div>
  {% endif %}
{% endset %}

<div class="flex flex-col space-y-2">
  {{ quote }}
  {{ source }}
</div>
{% set tag = headline ? 'section' : 'div' %}
{% set flip_class = flipped ? 'flipped' %}
{% set bg_pos = flipped ? 'right-0' : 'left-0' %}
{% set bg_pseudo = flipped ? 'after' : 'before' %}
<div class="lg:container lg:relative lg:mb-32">
  <{{ tag }} class="feature feature--fancy bg-blue pb-10 lg:p-10 {{ flip_class }}">
    <div class="flex flex-col lg:flex-row relative z-10">
      <div class="lg:flex-1/2 w-full mb-10 lg:mb-0 lg:-mb-20 {{ flipped ? 'lg:order-last' }}">{{ picture }}</div>
      <div class="lg:flex-1/2 flex flex-col space-y-6 px-10">
        {% if headline %}
          {% include '../h/h.twig' with { level: '2', headline: headline, override_classes: 'font-medium text-2xl sm:text-4xl text-white' } only %}
        {% endif %}

        {% if wysiwyg %}
          <div class="prose prose-lg prose-white max-w-none">{{ wysiwyg }}</div>
        {% endif %}
        
        {% if link_list %}{{ link_list }}{% endif %}
      </div>
    </div>
  </{{ tag }}>  
</div>
